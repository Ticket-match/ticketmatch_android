<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitem_messages"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:id="@+id/listitem_messages_image"
        android:layout_margin="10dp"/>

    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
       android:layout_toRightOf="@+id/listitem_message_image"
       android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/listitem_messages_name_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/listitem_messages_date_time" />


</LinearLayout>