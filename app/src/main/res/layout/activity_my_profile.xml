        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:layout_above="@+id/footer"
            android:layout_below="@+id/header"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/myprofile_image"
                    android:scaleType="fitXY"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:onClick="btn_myprofile_image"
                    android:background="@null"
                    android:layout_margin="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:text="Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/myprofile_name"
                        android:layout_margin="1dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:alpha="0.54"/>

                    <TextView
                        android:text="Gender and Age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/myprofile_gender_age"
                        android:layout_margin="1dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:alpha="0.54"/>

                    <TextView
                        android:text="Location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/myprofile_location"
                        android:layout_margin="1dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:alpha="0.54"/>


                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/myprofile_rating"
                        android:rating="0"
                        android:stepSize="0.5"
                        android:numStars="5"
                        android:isIndicator="true"
                        android:progressTint="@color/colorAccent"
                        android:secondaryProgressTint="@android:color/darker_gray"
                        android:progressBackgroundTint="@android:color/darker_gray"
                        android:alpha="0.54"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaaaaa"
                android:layout_gravity="center"
                android:alpha="0.12"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <TextView
                android:text="Interests"
                android:id="@+id/interests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#2196F3"
                android:textStyle="normal|bold"
                android:alpha="0.87"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/myprofile_interests"
                android:layout_weight="1"
                android:alpha="0.54"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaaaaa"
                android:layout_gravity="center"
                android:alpha="0.12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"

            >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Interest"
                android:ems="10"
                android:id="@+id/newinterest_text"
                android:layout_weight="1"
                android:alpha="0.38"
                />

            <ImageButton
            android:src="@android:drawable/ic_input_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:onClick="btn_newinterest"
                android:alpha="0.54"/>
        </LinearLayout>

        </LinearLayout>

    <!--</ScrollView>-->

</android.widget.RelativeLayout>
