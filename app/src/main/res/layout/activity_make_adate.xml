<?xml version="1.0" encoding="utf-8"?>
    <android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_make_adate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="de.ticket_match.ticketmatch.MakeADate">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>


            <ListView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/listview_makeadate"
                android:layout_weight="1"
                android:alpha="0.54"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="right"
                >

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_search_adate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/search"
                    app:elevation="3dp"
                    android:onClick="btn_find_makeadate"
                    app:backgroundTint="#FFAB00"
                    android:clickable="true" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_makeadate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_add_white_18dp"
                    app:elevation="3dp"
                    android:onClick="btn_save_makeadate"
                    app:backgroundTint="#FFAB00"
                    android:clickable="true" />


            </LinearLayout>

        </LinearLayout>

    </android.widget.RelativeLayout>
