<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.ticket_match.ticketmatch">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="de.ticket_match.ticketmatch.TicketMatch"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Register"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ForgotAccount"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MyProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChangePassword"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MyProfileRatings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Message_Overview"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Message_Chat"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".ForeignProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ForeignProfileRating"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Offer_Overview"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NewOffer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Offer_Detail"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Find"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Find_Vendor"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Message_Vendor"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MakeADate"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MakeADate_Detail"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Search_MakeADate"
            android:screenOrientation="portrait" />
        <activity
            android:name=".New_MakeAdate"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MakeADate_SearchResults"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MakeADateResults_Message"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivityTabHost"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity android:name=".Ticket_Search" />
    </application>

</manifest>